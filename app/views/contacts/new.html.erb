<div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
        <h2>Comments? Send us an owl!</h2>
    </div>
    <div class="col-md-4 col-md-offset-4">
        <div class="well">
            <!-- @contact object instantiated in contacts_controller.rb -->
            <%= form_for @contact do |f| %>
                <div class="form-group">
                    <%= f.label :name %>
                    <%= f.text_field :name, class: 'form-control', :placeholder => 'Lord Voldemort' %>
                </div>
                <div class="form-group">
                    <%= f.label :email %>
                    <%= f.email_field :email, class: 'form-control', :placeholder => 'lonely_tom@hotmail.com' %>
                </div>
                <div class="form-group">
                    <%= f.label :comments %>
                    <%= f.text_area :comments, class: 'form-control' %>
                </div>
                <%= f.submit 'Submit', class: 'btn btn-default' %>
            <% end %>
            
        </div>
    </div>
</div>